<h1><%= @car.brand %></h1>
<h2><%= @car.model %></h2>
<h3><%= @car.year %></h3>
<p><%= @car.fuel%><p>

<% if @car.favourites.empty? %>
  <%= simple_form_for [@car, @favourite] do |f| %>
    <%= f.submit "Add to Garage", class: "btn btn-primary" %>
  <% end %>
<% else %>
  <p>This car is already is already in your garage </p>
<% end %>

<h1>New Review</h1>
<%= simple_form_for [@car, @review] do |f| %>
    <%= f.input :comment %>
    <%= f.input :rating, collection: 1..5 %>
    <%= f.submit "Submit Review", class: "btn btn-primary" %>
  <% end %>

<h2>Reviews</h2>
<% @car.reviews.each do |review| %>
  <p><%= review.comment %></p>
  <p>Rating: <%= review.rating %></p>
  <p>------------------------</p>
<% end %>
